generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  Int     @id @default(autoincrement())
  username            String
  email               String  @unique
  password            String
  reset_password_link String?

  @@map("users")
}

